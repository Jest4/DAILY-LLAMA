<template id="textbox-template">

  <div class="row">
    <div class="col-12">
      <span class="bmd-form-group" style="margin: auto;">
        <div class="input-group">

            <table width="100%">
              <thead>
                <tr>
                  <th colspan="1"></th>
                </tr>
              </thead>

              <tbody>
                <% @entries.order(created_at: :desc).each do |entry| %>
                  <tr>
                    <td style="text-align: center;"> <%= link_to entry.created_at.strftime("%A, %B %e,  %Y"), entry %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        </div>
      </span>
    </div>
  </div>
</template>
