<template id="textbox-template">

  <div class="row">
    <div class="col-12">
      <span class="bmd-form-group">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <!-- <i class="fal fa-heart-circle icon colour-title"></i> -->

            </span>
            <table>
              <thead>
                <tr>
                  <th colspan="4"></th>
                </tr>
              </thead>

              <tbody>
                <% @entries.order(created_at: :desc).each do |entry| %>
                  <tr>
                    <td> Entry # <%= entry.id %> by <%= entry.user.first_name %> <%= entry.user.last_name %> </td>
                    <td><%= link_to 'Show', entry %></td>
                    <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
                    <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </span>
    </div>
  </div>
</template>
