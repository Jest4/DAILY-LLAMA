<div class="full-screen penguins" data-photo="penguins">
<br><br><br><br><br><br>

  <div class="container cont-center" style="opacity: 0; ">
    <div class="row">
      <div class="col-12 col-md-8 ml-auto mr-auto">
        <div class="text-center">
          <h3 class="colour-title question">Your Entries</h3>
          <p class="description advice text-white"></p>
        </div>

        <div class="card card-raised card-form-horizontal mt-4" style="overflow-y: scroll; height: 500px;">
          <div class="card-body px-5">
            <div class="row">
              <% @entries.each do |entry| %>
              <div class="card col-12">
                <div class="card-body px-2">
                  <%= link_to entry.created_at.strftime("%A, %B %e,  %Y"), entry, class: 'orange' %>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

